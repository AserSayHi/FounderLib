	<s:HGroup id="nv"
			  gap="36">
		<s:ButtonBar skinClass="skins.DefaultButtonBarSkin"
					 horizontalCenter="0"
					 change="nvs_changeHandler(event)"
					 y="35	"
					 id="nvs"/>
		<s:Button skinClass="skins.DefaultButtonBigSkin"
				  id="ready"
				  label="准备好了"
				  click="ready_clickHandler(event)"/>
	</s:HGroup>

